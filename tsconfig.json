{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "module": "commonjs",
    "target": "es2019",
    "skipLibCheck": true,  // Ignore la v√©rification des fichiers .d.ts dans node_modules
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "@domain/*": ["./domain/*"],
      "@core/*": ["./core/*"],
      "@infrastructure/*": ["./infrastructure/*"]
    }
  },
  "include": ["src/**/*", "package.json"],
  "exclude": ["node_modules", "dist"]
}